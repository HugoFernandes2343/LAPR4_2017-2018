<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:cb="urn:import:gwt.material.design.addins.client.combobox">
    <ui:style>

    </ui:style>
    <ma:window.MaterialWindow ui:field="formWindow" width="70%" title="Create a Macro" textAlign="LEFT" padding="32"
                              height="600px">
        <m:MaterialPanel ui:field="allOptions">
            <m:MaterialLabel title="Type of Marco"></m:MaterialLabel>
            <cb:MaterialComboBox ui:field="macroType"></cb:MaterialComboBox>
            <m:MaterialPanel title="Insert Macro's name">
                <m:MaterialTextBox ui:field="macroName"></m:MaterialTextBox>
            </m:MaterialPanel>
            <m:MaterialPanel>
                <m:MaterialPanel title="Insert Macro">
                    <m:MaterialTextArea ui:field="macroCode">
                    </m:MaterialTextArea>
                </m:MaterialPanel>
            </m:MaterialPanel>
            <m:MaterialPanel>
                <m:MaterialButton ui:field="runButton" text="Run"/>
                <m:MaterialButton ui:field="cancelButton" text="Cancel"/>
            </m:MaterialPanel>

            <!--<m:MaterialIcon ui:field="executeForm" iconType="FORWARD" tooltip="Execute Form" iconColor="BLUE"-->
                            <!--waves="DEFAULT" circle="true" grid="s1"/>-->
        </m:MaterialPanel>
        <m:MaterialPanel ui:field="macroCards">

        </m:MaterialPanel>
    </ma:window.MaterialWindow>
</ui:UiBinder>