<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <g:HTMLPanel>
        <m:MaterialColumn grid="s12">
            <m:MaterialTab ui:field="tab" indicatorColor="WHITE" shadow="1">
                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink text="EVENTS" href="#tab1" textColor="WHITE"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink text="CALENDARS" href="#tab2" textColor="WHITE"/>
                </m:MaterialTabItem>
            </m:MaterialTab>
        </m:MaterialColumn>
        <m:MaterialColumn m:id="tab1" grid="s12">
            <g:HTMLPanel>
                <m:table.MaterialDataTable shadow="1"
                                           m:id="table" ui:field="table" title="Upcoming Events" height="calc(100vh - 131px)"
                                           useLoadOverlay="false" useStickyHeader="true" useCategories="true"
                                           useRowExpansion="false" selectionType="NONE"/>
            </g:HTMLPanel>
        </m:MaterialColumn>
    </g:HTMLPanel>
</ui:UiBinder>
