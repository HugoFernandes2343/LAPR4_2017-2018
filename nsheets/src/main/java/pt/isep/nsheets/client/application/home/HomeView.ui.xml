<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                     xmlns:g="urn:import:com.google.gwt.user.client.ui"
                     xmlns:m="urn:import:gwt.material.design.client.ui">


    <m:MaterialPanel>

        <m:MaterialNavBar ui:field="navBar" paddingLeft="20" width="100%" backgroundColor="GREY" activates="sideBar" textColor="WHITE">
            <m:MaterialNavBrand ui:field="navBrand" text="Search" fontSize="1.2em"/>
            <m:MaterialLink ui:field="btnSearch" iconType="SEARCH" iconColor="WHITE" float="RIGHT"/>
        </m:MaterialNavBar>

        <m:MaterialNavBar ui:field="navBarSearch" width="100%" visible="false">
            <m:MaterialSearch ui:field="txtSearch" placeholder="Search for name or description" backgroundColor="WHITE" iconColor="BLACK" active="true" grid="l3" shadow="1"/>
        </m:MaterialNavBar>

        <g:HTMLPanel ui:field="htmlPanel">

            <m:MaterialCard ui:field="card" backgroundColor="BLUE_DARKEN_1">
                <m:MaterialCardContent textColor="WHITE">
                    <m:MaterialCardTitle ui:field="workbookTitle" text="Sample" iconType="INSERT_DRIVE_FILE" iconPosition="RIGHT"/>
                    <m:MaterialLabel ui:field="workbookDescription"/>
                </m:MaterialCardContent>
                <m:MaterialCardAction>
                    <m:MaterialLink ui:field="renameLink" text="Rename" iconType="EDIT" iconColor="INDIGO" textColor="WHITE"/>
                    <m:MaterialLink ui:field="deleteLink" text="Delete" iconType="DELETE" iconColor="GREY" textColor="WHITE"/>
                </m:MaterialCardAction>
            </m:MaterialCard>

        <!--<m:MaterialModal ui:field="modal">
                <m:MaterialModalContent>
                    <m:MaterialTitle title="Rename Workbook" description="Some description here..."/>
                    <ma:autocomplete.MaterialAutoComplete ui:field="acModal" placeholder="Contacts" grid="s12"/>
                </m:MaterialModalContent>
                <m:MaterialModalFooter textAlign="RIGHT">
                    <m:MaterialButton ui:field="btnClose" text="Close" type="FLAT" textColor="BLACK" waves="DEFAULT"/>
                </m:MaterialModalFooter>
            </m:MaterialModal> -->

        </g:HTMLPanel>

        <m:MaterialFAB>
            <m:MaterialButton type="FLOATING" iconType="ADD" size="LARGE"/>
            <m:MaterialFABList>
                <m:MaterialButton ui:field="newWorkbookButtonPublic" type="FLOATING" waves="LIGHT" iconType="INSERT_DRIVE_FILE" tooltip="New Public Workbook" tooltipPosition="LEFT"/>
                <m:MaterialButton ui:field="newWorkbookButtonPrivate" backgroundColor="LIGHT_GREEN_ACCENT_4" type="FLOATING" waves="LIGHT" iconType="LOCK" tooltip="New Private Workbook" tooltipPosition="LEFT"/>
            </m:MaterialFABList>
        </m:MaterialFAB>

    </m:MaterialPanel>

</ui:UiBinder>