<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <ma:window.MaterialWindow ui:field="wizardWindowStep1" width="70%" height="700px" title="Create Bar Chart">
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialTextBox ui:field="chartName" label="Chart Name" grid="s2"/>
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialTextBox ui:field="upperCellInfo" label="Upper left cell" grid="s2" />
                <m:MaterialTextBox ui:field="lowerCellInfo" label="Lower right cell" grid="s2" />
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialListValueBox ui:field="linesOrColumnsBox" placeholder="Lines or Columns?" grid="s2" />
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialButton ui:field="previewChartButton" text="Sort" waves="LIGHT" textColor="WHITE" iconType="POLYMER" grid="s2"/>
            </m:MaterialPanel>
        </ma:window.MaterialWindow>
        <ma:window.MaterialWindow ui:field="wizardWindowStep2" width="70%" height="700px" title="Create Bar Chart">
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialTextBox ui:field="chartName" label="Chart Name" grid="s2"/>
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialTextBox ui:field="upperCellInfo" label="Upper left cell" grid="s2" />
                <m:MaterialTextBox ui:field="lowerCellInfo" label="Lower right cell" grid="s2" />
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialListValueBox ui:field="linesOrColumnsBox" placeholder="Lines or Columns?" grid="s2" />
            </m:MaterialPanel>
            <m:MaterialPanel padding="5" textAlign="CENTER" height="50px">
                <m:MaterialButton ui:field="previewChartButton" text="Sort" waves="LIGHT" textColor="WHITE" iconType="POLYMER" grid="s2"/>
            </m:MaterialPanel>
        </ma:window.MaterialWindow>
    </g:HTMLPanel>
</ui:UiBinder>