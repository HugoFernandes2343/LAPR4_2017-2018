<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:cb="urn:import:gwt.material.design.addins.client.combobox">
    <ui:style>

    </ui:style>
    <ma:window.MaterialWindow ui:field="window" width="70%" title="Export to PDF" textAlign="LEFT" padding="32"
                              height="600px">
        <m:MaterialPanel ui:field="radioPanel" title="What do you wish to export">
            <m:MaterialRadioButton ui:field="completeWorkbook" name="select" text="Export whole workbook"/>
            <m:MaterialRadioButton ui:field="completeSpreadsheet" name="select"
                                   text="Export entire spreadsheet"/>
            <m:MaterialRadioButton ui:field="partSpreadsheet" name="select" text="Export part of spreadsheet"/>
        </m:MaterialPanel>
        <m:MaterialPanel ui:field="workbookPanel" title="Chose worksheet to export">
            <m:MaterialListValueBox  placeholder="Choose workbook" grid="s12"/>
            <m:MaterialButton text="Export" waves="DEFAULT" backgroundColor="BLUE" textColor="WHITE"/>
        </m:MaterialPanel>
        <m:MaterialPanel ui:field="spreadsheetPanel" title="Chose worksheet to export">
            <m:MaterialListValueBox  placeholder="Choose workbook" grid="s12"/>
            <m:MaterialListValueBox  placeholder="Choose spreadsheet" grid="s12"/>
            <m:MaterialButton text="Export" waves="DEFAULT" backgroundColor="BLUE" textColor="WHITE"/>
        </m:MaterialPanel>
        <m:MaterialPanel ui:field="partSpreadsheetPanel" title="Chose worksheet to export">
            <m:MaterialListValueBox  placeholder="Choose workbook" grid="s12"/>
            <m:MaterialListValueBox  placeholder="Choose spreadsheet" grid="s12"/>

            <m:MaterialButton text="Export" waves="DEFAULT" backgroundColor="BLUE" textColor="WHITE"/>
        </m:MaterialPanel>
    </ma:window.MaterialWindow>
</ui:UiBinder>