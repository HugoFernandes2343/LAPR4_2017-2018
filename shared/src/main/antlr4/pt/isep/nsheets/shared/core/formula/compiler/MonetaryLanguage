grammar Formula;
@header {
//    package pt.isep.nsheets.shared.core.formula.compiler;
}

expressionMonetary
    : START ( euroExpression | poundExpression | dollarExpression )
    ;

euroExpression
    : EURO_FUN   LCBRA ( euroExpression | poundExpression | dollarExpression | comparison) RCBRA
    ;

poundExpression
    : POUND_FUN LCBRA ( euroExpression | poundExpression | dollarExpression | comparison) RCBRA
    ;

dollarExpression
    : DOLLAR_FUN LCBRA (euroExpression|poundExpression|dollarExpression | comparison) RCBRA
    ;

literalMonetary
    : NUMBER (EURO_SIGN|DOLLAR_SIGN|POUND_SIGN)
    | STRING (EURO_SIGN|DOLLAR_SIGN|POUND_SIGN)
    ;

START:'#';
EURO_FUN:'EURO'| 'euro';
POUND_FUN:'POUND' | 'pound';
DOLLAR_FUN:'DOLLAR' |'dollar';
EURO_SIGN:'e';
DOLLAR_SIGN:'$';
POUND_SIGN:'Â£';